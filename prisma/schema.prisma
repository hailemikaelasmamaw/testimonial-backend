generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Testimonial {
  id    String     @default(uuid()) @id
  testimonial String  
  name  String?  
  author    Author?   @relation(fields: [authorId], references: [id])
  authorId  String?

  @@map("testimonial")
}

model Author {
  id        String     @default(uuid()) @id
  title     String
  testimonials Testimonial[]
  @@map("author")
}